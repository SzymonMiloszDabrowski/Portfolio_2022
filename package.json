{
	"name": "portfolio_2022",
	"version": "1.0.0",
	"description": "This is my simple portfolio page with my projects and form to contact. I decided to create this as simple as possible, that is why i used only HTML, Less and Javascript. I belive that decision also provide on better SEO and UX.",
	"main": "index.js",
	"scripts": {
		"build:sass": "sass src/assets/styles:public",
		"copy:html": "copyfiles -u 1 ./src/*.html public",
		"copy:js": "copyfiles -u 1 ./src/assets/scripts/*.js public",
		"copy:assets": "copyfiles -u 1 ./src/assets/images/**/* public",
		"copy": "npm-run-all --parallel copy:*",
		"watch:html": "onchange \"src/*.html\" -- npm run copy:html",
		"watch:js": "onchange \"src/assets/scripts/*.js\" -- npm run copy:js",
		"watch:assets": "onchange \"src/assets/images/**/*\" -- npm run copy:assets",
		"watch:sass": "sass --watch src/assets/styles:public",
		"watch": "npm-run-all --parallel watch:*",
		"serve": "browser-sync start --server public --files public",
		"start": "npm-run-all copy --parallel watch serve",
		"build": "npm-run-all clean copy build:*",
		"clean": "rd /s /q public",
		"postbuild": "postcss public/*.css -u autoprefixer -r"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SzymonMiloszDabrowski/Portfolio_2022.git"
	},
	"keywords": [],
	"author": "Szymon DÄ…browski",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/SzymonMiloszDabrowski/Portfolio_2022/issues"
	},
	"homepage": "https://szymon.debno.com/",
	"devDependencies": {
		"autoprefixer": "^10.4.14",
		"browser-sync": "^2.29.1",
		"copyfiles": "^2.4.1",
		"cssnano": "^6.0.0",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"postcss-cli": "^10.1.0",
		"sass": "^1.61.0"
	}
}
